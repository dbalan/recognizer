description "recognizer"

start on (local-filesystems and net-device-up IFACE=eth0)
stop on [!12345]

respawn

chdir <%= @directory %>
exec sudo -u <%= node.recognizer.user %> sh -c "<%= @command %><%= " #{@options}" if @options %> >> /var/log/recognizer/recognizer.log 2>&1"
